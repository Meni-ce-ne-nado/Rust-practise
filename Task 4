const SIZE: usize = 5; // Розмір вводити сюди

fn main() {
    for i in 0..SIZE {
        for _ in 0..(SIZE - i - 1) {
            print!(" ");
        }
        for _ in 0..(2 * i + 1) {
            print!("*");
        }
        println!();
    }

    for i in (0..SIZE).rev() {
        for _ in 0..(SIZE - i - 1) {
            print!(" ");
        }
        for _ in 0..(2 * i + 1) {
            print!("*");
        }
        println!();
    }
}
